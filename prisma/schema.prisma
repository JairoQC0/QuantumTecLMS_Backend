generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id             Int           @id @default(autoincrement())
  nombre         String
  correo         String        @unique
  contrasenaHash String
  rol            RolUsuario
  eliminado      Boolean       @default(false)
  creadoEn       DateTime      @default(now())
  actualizadoEn  DateTime      @updatedAt

  cursosDictados Curso[]       @relation("CursosPorDocente")
  inscripciones  Inscripcion[]
  solicitudes    SolicitudInscripcion[]
}

enum RolUsuario {
  ADMIN
  DOCENTE
  ESTUDIANTE
}

model Curso {
  id             Int        @id @default(autoincrement())
  titulo         String
  descripcion    String?
  activo         Boolean     @default(true)
  codigoAcceso   String      @unique
  creadoEn       DateTime    @default(now())
  actualizadoEn  DateTime    @updatedAt

  docenteId      Int
  docente        Usuario     @relation("CursosPorDocente", fields: [docenteId], references: [id])

  inscripciones  Inscripcion[]
  solicitudes    SolicitudInscripcion[]
}

model Inscripcion {
  id         Int      @id @default(autoincrement())
  cursoId    Int
  usuarioId  Int
  creadoEn   DateTime @default(now())

  curso      Curso    @relation(fields: [cursoId], references: [id])
  estudiante Usuario  @relation(fields: [usuarioId], references: [id])
}

model SolicitudInscripcion {
  id         Int       @id @default(autoincrement())
  usuarioId  Int
  cursoId    Int
  estado     EstadoSolicitud @default(PENDIENTE)
  creadoEn   DateTime  @default(now())

  estudiante Usuario   @relation(fields: [usuarioId], references: [id])
  curso      Curso     @relation(fields: [cursoId], references: [id])
}

enum EstadoSolicitud {
  PENDIENTE
  ACEPTADA
  RECHAZADA
}
